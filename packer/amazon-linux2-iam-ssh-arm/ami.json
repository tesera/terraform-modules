{
    "variables": {
        "profile": "",
        "region": "",
        "ami_regions": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `profile`}}",
            "region": "{{user `region`}}",
            "ami_regions": "{{user `ami_regions`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn2-ami-hvm-*-arm64-gp2",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "137112412989"
                ],
                "most_recent": true
            },
            "instance_type": "r6g.medium",
            "ssh_username": "ec2-user",
            "ami_name": "amzn2-ami-hvm-{{isotime \"20060102030405\"}}-arm64-gp2"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "user_data.sh",
            "execute_command": "sudo -S env {{ .Vars }} {{ .Path }}"
        }
    ]
}